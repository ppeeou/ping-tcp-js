{
  "include": ["./src/"],
  "compilerOptions": {
    "lib": ["es2020"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/types/",
    "rootDir": "./src/",
    "downlevelIteration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
